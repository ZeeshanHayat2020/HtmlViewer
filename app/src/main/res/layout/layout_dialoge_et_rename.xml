<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_2sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/rename_file"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dialog_etFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_margin="@dimen/_10sdp"
            android:backgroundTint="@color/colorPrimary"
            android:hint="@string/enter_name"
            android:inputType="textMultiLine|text"
            android:maxLength="30"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_etFileName"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="end"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialgBtn_Cancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ripple_effect_grey_square"
                android:clickable="true"
                android:focusable="true"
                android:paddingEnd="1dp"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@color/colorTextPrimaryDark"
                android:textSize="@dimen/_11sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialogBtn_rename"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ripple_effect_grey_square"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/rename"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>