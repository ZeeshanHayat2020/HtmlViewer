<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HtmlViewer" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:editTextColor">@color/colorTextPrimaryDark</item>
        <item name="android:textColorHint">@color/colorTextPrimary</item>
        <item name="popupMenuStyle">@style/mTheme.PopUpMenu</item>
        <item name="android:popupElevation">@dimen/_4sdp</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.HtmlViewer.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:editTextColor">@color/colorTextPrimaryDark</item>
        <item name="android:textColorHint">@color/colorTextPrimary</item>
        <item name="popupMenuStyle">@style/mTheme.PopUpMenu</item>
        <item name="android:popupElevation">@dimen/_4sdp</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <style name="mTheme.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorTextPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_17sdp</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/grey</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="rippleColor">@color/grey</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>


    <style name="mTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <!-- Text Size -->
        <item name="android:textSize">@dimen/_13sdp</item>
        <!-- Query Text Color -->
        <item name="android:textStyle">italic</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/grey</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/colorPrimaryDark</item>
    </style>

    <style name="mTheme.PopUpMenu" parent="android:ThemeOverlay.Material.Light">
        <item name="android:popupBackground">@drawable/shape_b_pop_up_menu</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:progressBarStyleSmall">@dimen/_30sdp</item>
    </style>



</resources>