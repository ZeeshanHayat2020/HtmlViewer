<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.HtmlViewer.Toolbar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:editTextColor">@color/colorTextPrimaryDark</item>
        <item name="android:textColorHint">@color/colorTextPrimary</item>
        <item name="android:popupElevation">@dimen/_4sdp</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="mTheme.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
    </style>


    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorTextPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_17sdp</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/grey10</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="rippleColor">@color/grey10</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>


    <style name="title_background_drawable_vertical">
        <item name="android:background">@drawable/sys_title_bg_vertical</item>
    </style>

    <style name="title_background_drawable_horizontal">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="title_background_vertical" parent="android:Theme">
        <item name="android:windowTitleBackgroundStyle">@style/title_background_drawable_vertical
        </item>
    </style>

    <style name="title_background_horizontal" parent="android:Theme">
        <item name="android:windowTitleBackgroundStyle">
            @style/title_background_drawable_horizontal
        </item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:progressBarStyleSmall">@dimen/_30sdp</item>
    </style>

</resources>